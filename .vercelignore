# Ignore TypeScript packages directory to prevent build errors
packages/

# Ignore TypeScript config files that cause compilation issues
tsconfig.json
vitest.config.ts
vitest.integration.config.ts

# Ignore test files and development files
**/*.test.ts
**/*.test.js
**/*.spec.ts
**/*.spec.js
**/tests/
**/__tests__/

# Ignore build artifacts and cache
dist/
build/
.turbo/
.cache/

# Ignore documentation and config files not needed for deployment
*.md
docker-compose.yml
Dockerfile
k8s/
scripts/

# Ignore development tools
.eslintrc*
.prettierrc*
.gitignore

# Ignore node_modules except in api directory
node_modules/
!api/node_modules/

# Ignore environment files
.env
.env.local
.env.development
.env.production