# UFC Prediction Platform - Production Environment Variables
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=production
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://admin:YOUR_MONGO_PASSWORD@mongodb:27017/ufc_platform?authSource=admin
REDIS_URL=redis://:YOUR_REDIS_PASSWORD@redis:6379
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=YOUR_INFLUXDB_TOKEN
INFLUXDB_ORG=ufc-platform
INFLUXDB_BUCKET=metrics

# Security Keys (CHANGE THESE!)
JWT_SECRET=your-super-secure-jwt-secret-change-this-in-production
ENCRYPTION_KEY=your-super-secure-encryption-key-change-this-in-production
API_SIGNING_KEY=your-super-secure-api-signing-key-change-this-in-production

# API Keys for Live Data
SPORTSDATA_IO_API_KEY=81a9726b488c4b57b48e59042405d1a6
ODDS_API_KEY=22e59e4eccd8562ad4b697aeeaccb0fb
ESPN_API_KEY=your_espn_api_key_here

# Proxy Configuration (Optional)
OXYLABS_USERNAME=your_oxylabs_username
OXYLABS_PASSWORD=your_oxylabs_password

# Database Passwords
MONGO_PASSWORD=your_secure_mongo_password
REDIS_PASSWORD=your_secure_redis_password
INFLUXDB_PASSWORD=your_secure_influxdb_password
INFLUXDB_USER_PASSWORD=your_secure_influxdb_user_password
GRAFANA_PASSWORD=your_secure_grafana_password

# Rate Limiting
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Monitoring
ENABLE_MONITORING=true
LOG_LEVEL=info