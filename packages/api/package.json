{
  "name": "@ufc-platform/api",
  "version": "1.0.0",
  "description": "REST API service for UFC Prediction Platform",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/__tests__/integration --config ../../vitest.integration.config.ts",
    "test:e2e": "vitest run src/__tests__/e2e --config ../../vitest.integration.config.ts",
    "test:performance": "vitest run src/__tests__/performance --config ../../vitest.integration.config.ts",
    "test:chaos": "vitest run src/__tests__/chaos --config ../../vitest.integration.config.ts",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@ufc-platform/shared": "*",
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.0",
    "mongodb": "^6.0.0",
    "@influxdata/influxdb-client": "^1.33.0",
    "redis": "^4.6.0",
    "ioredis": "^5.3.0",
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "puppeteer": "^21.0.0",
    "https-proxy-agent": "^7.0.0",
    "socks-proxy-agent": "^8.0.0",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/cors": "^2.8.0",
    "@types/compression": "^1.7.0",
    "@types/node": "^20.0.0",
    "tsx": "^3.12.0",
    "typescript": "^5.1.0",
    "vitest": "^0.34.0",
    "@vitest/coverage-v8": "^0.34.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "mongodb-memory-server": "^8.15.0"
  }
}